<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TimesheetMobile1.LoginPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Kirjaudu sisään"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="Tunnus1" Text="Käyttäjätunnus"></Entry>
            <Entry x:Name="Sana1"  IsPassword="True" ></Entry>

            <Button Text="Kirjaudu sisään" Clicked="KirjauduSisaan"></Button>

            <Button Text="Lisää uusi käyttäjä" Clicked="UusiKayttaja"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>